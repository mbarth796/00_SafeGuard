<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SafeGuardLightRed"
    tools:context=".ui.contact.ContactFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_viewContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sup_rounded_corner_blue"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/contact_view"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_notfallkontakt" />

            <TextView
                android:id="@+id/textView_prenameContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/sup_rounded_corner_grey"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal"
                android:text="@string/masterdata_prename"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintEnd_toStartOf="@+id/editText_name"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText_firstnameContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/sup_rounded_corner_white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/masterdata_prename"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_lastnameContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sup_rounded_corner_grey"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal"
                android:text="@string/masterdata_lastname"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_name" />

            <EditText
                android:id="@+id/editText_lastnameContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/sup_rounded_corner_white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/masterdata_lastname"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_name" />

            <TextView
                android:id="@+id/textView_telephoneContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sup_rounded_corner_grey"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal"
                android:text="@string/masterdata_telephone"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_geburtsdatum" />

            <EditText
                android:id="@+id/editText_telephoneContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/sup_rounded_corner_white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/masterdata_telephone"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_geburtsdatum" />


            <TextView
                android:id="@+id/textView_relationContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sup_rounded_corner_grey"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal"
                android:text="@string/contact_relation"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_erkrankungen" />


            <EditText
                android:id="@+id/editText_relationContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/sup_rounded_corner_white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/contact_relationHint"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_erkrankungen" />

            <Button
                android:id="@+id/button_addContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sup_rounded_corner_blue"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/contact_add"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_notfallkontakt" />

            <TextView
                android:id="@+id/textView_idContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/sup_rounded_corner_grey"
                android:fontFamily="@font/bree_serif"
                android:gravity="center_horizontal"
                android:text="@string/contact_id"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_erkrankungen" />


            <EditText
                android:id="@+id/editText_idContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:background="@drawable/sup_rounded_corner_white"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="@string/contact_idHint"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editText_erkrankungen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:id="@+id/button_updateContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/sup_rounded_corner_blue"
                    android:fontFamily="@font/bree_serif"
                    android:text="@string/contact_update"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_notfallkontakt"
                    style="?android:attr/buttonBarButtonStyle"/>

                <Button
                    android:id="@+id/button_deleteContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/sup_rounded_corner_blue"
                    android:fontFamily="@font/bree_serif"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/contact_delete"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editText_notfallkontakt"
                    style="?android:attr/buttonBarButtonStyle"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>